import pandas as pd
import numpy as np

# -------------------------------
# STEP 1: Load original datasets
# -------------------------------
hospital = pd.read_csv("/content/drive/MyDrive/Colab Notebooks/miniproject/hospital data analysis.csv")
insurance = pd.read_csv("/content/drive/MyDrive/Colab Notebooks/miniproject/insurance (2) (1).csv")

# -------------------------------
# STEP 2: Rename columns for uniformity
# -------------------------------
hospital = hospital.rename(columns={
    'Condition': 'Disease',
    'Procedure': 'Treatment',
    'Cost': 'Cost',
    'Gender': 'Sex'
})

insurance = insurance.rename(columns={
    'age': 'Age',
    'sex': 'Sex',
    'charges': 'Cost',
    'smoker': 'Smoker',
    'region': 'Region'
})

# -------------------------------
# STEP 3: Add missing/derived fields logically
# -------------------------------
regions = ['north', 'south', 'east', 'west', 'central']

# For hospital dataset
hospital['Region'] = np.random.choice(regions, size=len(hospital))
hospital['Hospital'] = hospital['Treatment'].apply(
    lambda x: 'Private' if any(k in str(x) for k in ['Surgery', 'CT', 'Angio']) else 'Gov'
)
hospital['Smoker'] = np.random.choice(['Yes', 'No'], size=len(hospital), p=[0.25, 0.75])

# For insurance dataset
disease_list = hospital['Disease'].unique().tolist()
treatment_list = hospital['Treatment'].unique().tolist()
insurance['Disease'] = np.random.choice(disease_list, size=len(insurance))
insurance['Treatment'] = np.random.choice(treatment_list, size=len(insurance))
insurance['Hospital'] = np.random.choice(['Private', 'Gov'], size=len(insurance), p=[0.7, 0.3])
insurance['Region'] = insurance['Region'].fillna(np.random.choice(regions))

# -------------------------------
# STEP 4: Combine relevant columns
# -------------------------------
hospital = hospital[['Disease','Treatment','Age','Smoker','Region','Hospital','Cost']]
insurance = insurance[['Disease','Treatment','Age','Smoker','Region','Hospital','Cost']]
combined = pd.concat([hospital, insurance], ignore_index=True)

# -------------------------------
# STEP 5: Add new post-prediction fields
# -------------------------------

# Length of Stay (days)
def stay_length(treatment):
    if any(k in str(treatment) for k in ['Surgery','Angio','CT','Cardiac']):
        return np.random.randint(5, 14)
    elif any(k in str(treatment) for k in ['Delivery','Lithotripsy','Append']):
        return np.random.randint(2, 6)
    else:
        return np.random.randint(1, 4)
combined['Length_of_Stay'] = combined['Treatment'].apply(stay_length)

# ICU Needed
combined['ICU_Needed'] = combined['Treatment'].apply(
    lambda x: 'Yes' if any(k in str(x) for k in ['Surgery','Angio','Cardiac','CT']) and np.random.rand()<0.6 else 'No'
)

# -------------------------------
# STEP 6: Calculate realistic cost
# -------------------------------
def adjusted_cost(row):
    cost = row['Cost']
    # Smoker
    if row['Smoker'] == 'Yes':
        cost *= 1.2
    # Hospital type
    if row['Hospital'] == 'Private':
        cost *= 1.25
    # Region variation
    if row['Region'] in ['north', 'west']:
        cost *= 1.1
    elif row['Region'] in ['south', 'east']:
        cost *= 0.95
    # ICU effect
    if row['ICU_Needed'] == 'Yes':
        cost *= 1.4
    # Length of stay effect
    d = row['Length_of_Stay']
    if d == 1:
        cost *= 1.00
    elif d <= 3:
        cost *= 1.10
    elif d <= 6:
        cost *= 1.20
    elif d <= 10:
        cost *= 1.35
    else:
        cost *= 1.50
    return round(cost, 2)

combined['Cost'] = combined.apply(adjusted_cost, axis=1)

# -------------------------------
# STEP 7: Save final dataset
# -------------------------------
combined.to_csv("final_post_prediction_dataset.csv", index=False)

print("âœ… Final Post-Prediction Dataset Created Successfully!")
print("Total Records:", len(combined))
print(combined.head(10))
